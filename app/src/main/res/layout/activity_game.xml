<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.moviemastery.moviemastery.activity.GameActivity"
    android:id="@+id/rootLayout">

    <com.beardedhen.androidbootstrap.FontAwesomeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fontawesometext:fa_icon="fa-heart"
        android:id="@+id/heart1"
        android:textSize="20sp"
        android:textColor="@color/bbutton_danger"
        android:layout_marginLeft="-2dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentStart="true" />

    <com.beardedhen.androidbootstrap.FontAwesomeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heart2"
        android:textSize="20sp"
        fontawesometext:fa_icon="fa-heart"
        android:layout_marginLeft="-2dp"
        android:textColor="@color/bbutton_danger"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@id/heart1"
        android:layout_toEndOf="@+id/heart1" />

    <com.beardedhen.androidbootstrap.FontAwesomeText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heart3"
        android:textSize="20sp"
        fontawesometext:fa_icon="fa-heart"
        android:layout_marginLeft="-2dp"
        android:textColor="@color/bbutton_danger"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@id/heart2"
        android:layout_toEndOf="@+id/heart1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:enabled="false"
        android:id="@+id/movie1Label"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/resultLabel"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:enabled="false"
        android:id="@+id/movie2Label"
        android:clickable="true"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/movie1Label"
        android:layout_below="@+id/movie1Label"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:enabled="false"
        android:id="@+id/movie3Label"
        android:clickable="true"
        android:padding="8dp"
        android:layout_toEndOf="@+id/movie2Label"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/movie1Label"
        android:layout_below="@+id/movie2Label"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:enabled="false"
        android:id="@+id/movie4Label"
        android:clickable="true"
        android:padding="8dp"
        android:layout_toEndOf="@+id/movie2Label"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/movie1Label"
        android:layout_below="@+id/movie3Label"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#FFF1F1F1"
        android:id="@+id/explanationLabel"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/movie1Label"
        android:layout_below="@+id/movie4Label"
        android:layout_alignParentLeft="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Next Question"
        android:visibility="invisible"
        android:id="@+id/nextQuestionButton"
        bootstrapbutton:bb_type="primary"
        bootstrapbutton:bb_roundedCorners="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textSize="20sp"
        android:id="@+id/resultLabel"
        android:background="@android:color/transparent"
        android:layout_toStartOf="@+id/nextQuestionButton"
        android:layout_below="@+id/heart1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/nextQuestionButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score"
        android:id="@+id/textView2"
        android:layout_toEndOf="@+id/nextQuestionButton"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/scoreLabel"
        android:layout_toStartOf="@+id/textView2"
        android:text="0"
        android:layout_above="@+id/resultLabel"
        android:layout_alignEnd="@+id/movie1Label" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/explanationLabel"
        android:layout_above="@+id/nextQuestionButton"
        android:background="#FFF00000"
        android:gravity="center_horizontal|bottom"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/likeButton"
            android:textSize="52sp"
            android:visibility="invisible"
            fontawesometext:fa_icon="fa-thumbs-o-up"
            android:layout_gravity="bottom|left" />

        <View android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/dislikeButton"
            android:layout_gravity="bottom"
            android:textSize="56sp"
            android:visibility="invisible"
            android:textAlignment="gravity"
            android:gravity="bottom|right"
            fontawesometext:fa_icon="fa-thumbs-o-down"/>

    </LinearLayout>

</RelativeLayout>
